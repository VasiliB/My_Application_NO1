        android:textColor="@color/gray_6D6D80"
        app:layout_constraintTop_toBottomOf="@+id/genre"
        app:layout_constraintBottom_toBottomOf="@+id/staricon1"
        app:layout_constraintStart_toEndOf="@+id/staricon0"
        />

    <TextView
        android:id="@+id/storyline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Storyline"
        android:textColor="@color/gray_ECECEC"
        app:layout_constraintTop_toBottomOf="@+id/reviews"
        app:layout_constraintStart_toEndOf="@+id/guideVerticalLeft"
        />

    <TextView
        android:id="@+id/story"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/gray_6D6D80"
        android:text="After the devastating events of Avengers: Infinity War, the universe is in ruins. With the help of remaining allies, the Avengers assemble once more in order to reverse Thanos' actions and restore balance to the universe."
        app:layout_constraintTop_toBottomOf="@+id/storyline"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        />

